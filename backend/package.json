{
  "name": "anime-backend",
  "version": "1.0.0",
  "description": "Backend for Anime charting application",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^2.0.20",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": ["./tests/setup.js"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": ["controllers/**/*.js", "routes/**/*.js", "middleware/**/*.js"]
  }
}
